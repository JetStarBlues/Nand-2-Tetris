/** Test program for the OS Keyboard class. */

class Main {

	/** Gets input from the user and verifies its contents. */
	function void main() {
		var char c, key;
		var String s;
		var int i;
		var boolean ok;

		let key = 0;
		let ok = false;
		do GFX.printString("keyPressed test:");
		do GFX.println();
		while (~ok) {
			do GFX.printString("Please press the 'Page Down' key");

			// wait for key to be pressed
			while (key = 0) {
				let key = Keyboard.keyPressed();
			}

			// GFX.printChar( ' ' );
			// GFX.printInt( key );

			let c = key;  // save

			// wait for key to be released
			// while (~(key = 0)) {
			while ( key ) {
				let key = Keyboard.keyPressed();
			}

			do GFX.println();

			if (c = 137) {
				do GFX.printString("ok");
				do GFX.println();
				let ok = true;
			}
		}

		let ok = false;
		do GFX.printString("readChar test:");
		do GFX.println();
		do GFX.printString("(Verify that the pressed character is echoed to the screen)");
		do GFX.println();
		while (~ok) {
			do GFX.printString("Please press the number '3': ");
			let c = Keyboard.readChar();

			do GFX.println();

			if (c = 51) {
				do GFX.printString("ok");
				do GFX.println();
				let ok = true;
			}
		}

		let ok = false;
		do GFX.printString("readLine test:");
		do GFX.println();
		do GFX.printString("(Verify echo and usage of 'backspace')");
		do GFX.println();
		while (~ok) {
			let s = Keyboard.readLine("Please type 'JACK' and press enter: ");

			if (s.length() = 4) {
				if ((s.charAt(0) = 74) & (s.charAt(1) = 65) & (s.charAt(2) = 67) & (s.charAt(3) = 75)) {
					do GFX.printString("ok");
					do GFX.println();
					let ok = true;
				}
			}
		}

		let ok = false;
		do GFX.printString("readInt test:");
		do GFX.println();
		do GFX.printString("(Verify echo and usage of 'backspace')");
		do GFX.println();
		while (~ok) {
			let i = Keyboard.readInt("Please type '-32123' and press enter: ");

			GFX.printChar( ' ' );
			GFX.printInt( i );

			if (i = (-32123)) {
				do GFX.printString("ok");
				do GFX.println();
				let ok = true;
			}
		}

		do GFX.println();
		do GFX.printString("Test completed successfully");

		return;
	}

}
