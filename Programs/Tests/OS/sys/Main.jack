/** Test program for the OS Sys class. */

class Main {

    /** tests the wait method of the Sys class. */
    function void main() {
        var char key;

        do GFX.printString("Wait test:");
        do GFX.println();
        do GFX.printString("Press any key to start\n");

        // wait for keyDown
        while (key = 0) {
	       let key = Keyboard.keyPressed();
        }

        // wait for keyUp
        while (key) {
            let key = Keyboard.keyPressed();
        }

        do GFX.printString("Timer started");
        
        do Sys.wait(2000);

        do GFX.println();
        do GFX.printString("Time is up. Make sure that 2 seconds had passed.");
        
        return;
    }

}
